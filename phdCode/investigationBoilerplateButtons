/*
Code to use on investigation student slides
Adds buttons to hide or show each section of the investigation boilerplate
*/

//declare variables
const {questionButton, hypothesisButton, predictionButton, designButton, procedureButton, 
    fairTestButton, collectDataButton, analyzeDataButton, drawConclusionsButton, reviseButton, 
    question, questionInput, questionSpacer, 
    hypothesis, hypothesisInput, hypothesisSpacer, 
    prediction, predictionInput, predictionSpacer, 
    design1, design2, design3, design4, design5, design6, design7, design8, 
    designSpacer1, designSpacer4, designSpacer5, designSpacer6, designSpacer7, designSpacer8, 
    designInput2, designInput3, designInput4, designInput5, designInput6, designInput7, designInput8, 
    procedure, procedureInput, procedureSpacer, 
    fairTest, fairTestTable, fairTestSpacer1, fairTestSpacer2, fairTestSpacer3, 
    collectData, collectDataSpacer1, collectDataSpacer2, collectDataTable, collectDataTitle, 
    analyzeData, analyzeDataInput, analyzeDataSpacer, 
    drawConclusions, drawConclusionsInput, drawConclusionsSpacer, 
    revise, reviseInput} = components; 


//align buttons
questionButton.updateData({justify: "left"});
hypothesisButton.updateData({justify: "left"});
predictionButton.updateData({justify: "left"});
designButton.updateData({justify: "left"});
procedureButton.updateData({justify: "left"});
fairTestButton.updateData({justify: "left"});
collectDataButton.updateData({justify: "left"});
analyzeDataButton.updateData({justify: "left"});
drawConclusionsButton.updateData({justify: "left"});
reviseButton.updateData({justify: "left"});


