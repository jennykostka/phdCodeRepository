drawConclusionsSpacer.updateData({visible: false});

//revise
revise.updateData({visible: false});
reviseInput.updateData({visible: false});


// these sections show or hide components when buttons are pressed
//question
questionButton.on('click:1', () => {
  alert('button1 clicked!');
  question.updateData({visible: true});
  questionInput.updateData({visible: true});
  questionSpacer.updateData({visible: true});
});
questionButton.on('click:2', () => {
  alert('button2 clicked!');
  question.updateData({visible: false});
  questionInput.updateData({visible: false});
  questionSpacer.updateData({visible: false});
});

//hypothesis
